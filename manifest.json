{
  "manifest_version": 3,
  "name": "YTAF",
  "version": "1.0",
  "description": "YouTube Ad Free allows you to watch YouTube without ads or sponsored videos.",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16":  "icons/icon16.png",
    "32":  "icons/icon32.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}